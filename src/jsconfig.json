{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "src",
    "jsx": "react",
    "paths": {
      "components:/*": [
        "./components/*"
      ],
      "pages:/*": [
        "./pages/*"
      ],
      "assets:/*": [
        "./assets/*"
      ],
      "styles:/*": [
        "./styles/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}